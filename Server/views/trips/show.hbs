<div class="row">
    <div class="col s12 m8">
        <h3>{{trip.title}}
            {{!-- adding in editIcon helper, story user, user (note: does need the ../ because not inside each loop), story id, and false because its not a floating icon  --}}
            <small>{{{editIcon trip.user user trip._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{!-- wrapped in three curly's to parse html and avoid truncating--}}
                {{{trip.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{trip.user.displayName}}</span>
                {{!-- img-small class added in public css bc default is too large --}}
                <img src="{{trip.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                {{!-- links to page with all users stories --}}
                <a href="/trips/user/{{trip.user._id}}">More From {{trip.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>